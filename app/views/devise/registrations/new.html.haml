.container
  .sign-up
    .row
      .col-md-3
      .col-md-6
        .form-sign
          %h2.title Sign up
          = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
            = devise_error_messages!
            .form-group
              = f.label :email
              %br/
              = f.email_field :email, :autofocus => true, placeholder: "Enter email", :type => "email", :class => "form-control"

            .form-group
              = f.label :password
              %br/
              = f.password_field :password, placeholder: "Password",:class => "form-control"

            .form-group
              = f.label :password_confirmation
              %br/
              = f.password_field :password_confirmation,placeholder: "Password Confimation", :class => "form-control"
              %br/

            %button.btn.btn-primary{type: "submit"} Sign up
          %p
          = render "devise/shared/links"
      .col-md-3

