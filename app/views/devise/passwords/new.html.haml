.container
  .sign-up
    .row
      .col-md-3
      .col-md-6
        .form-sign
          %h2.title Forgot your password?
          = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
            = devise_error_messages!
            .form-group
              = f.label :email
              %br/
              = f.email_field :email, :autofocus => true, placeholder: "Enter email", :type => "email", :class => "form-control"
            %button.btn.btn-primary{type: "submit"} Reset password
          %p
          = render "devise/shared/links"
      .col-md-3

